{% extends "layout.njk" %}
{% import 'parts/card.njk' as cards%}

{% block content %}

    {% if (sales.length < 1) %}
       {% call cards.render('', 'cart-empty container form')%}
          <div class="content">
            <h3>Nenhuma Venda!</h3>
            <a href="/products/search" class='button'>Venda agora</a>
          </div>
       {% endcall %}

    {% else %}
    
      {% call cards.render('Minhas Vendas', 'sales orders container form')%}


        <div class="items">
          
          {% for sale in sales %}
            <div class="item-container">
              <div class="item">
                  <img src="{{sale.product.img}}" alt="Image of {{sale.product.name}}">
                  
                  <div>
                    <div class="title">{{sale.product.name}}</div>
                    <div class="price">{{sale.formattedPrice}}</div>
                    <div class="updated_at">{{sale.formattedUpdatedAt}}</div>
                  </div>

              </div>

              <div class="quantity">{{sale.quantity}}</div>

              <div class="total">{{sale.formattedTotal}}</div>

              <div class="status {{sale.status}}">{{sale.formattedStatus}}</div>
            </div>

          {% endfor %}
          
        </div>

      {% endcall %}
    {% endif %}
{% endblock content %}