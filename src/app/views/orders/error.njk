{% extends "layout.njk" %}
{% import 'parts/card.njk' as cards%}

{% block content %}

  
    {% call cards.render('', 'order-error container')%}
      <div class="error-lottie"></div>
      <h2>Oops! Não foi possível prosseguir com seu pedido!</h2>
      <h3>Mas não fique triste, pode estar tentando novamente!</h3>
      <a class='action' href="#" onclick="history.back()">Tentar novamente</a>
      
    {% endcall %}

    <script src="/animations/lottie.min.js"></script>
    <script>
      const element = document.querySelector('.error-lottie');

      lottie.loadAnimation({
        container: element,
        renderer: 'svg',
        loop: false,
        autoplay: true,
        path: '/animations/14651-error-animation.json' // the path to the animation json
      });

    </script>
{% endblock content %}