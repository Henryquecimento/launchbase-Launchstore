<header>
    <div class="container">

        <div class="logo">
            <h1><a href="/">Launchstore</a></h1>
            <h2>Compra e Venda</h2>
        </div>

        <form class="search" method="GET" action="/products/search">
            <input 
                type="text" 
                name="filter" 
                placeholder="Busque por produtos" 
                {% if search.term %} value={{search.term}} {% endif %}>
        </form>

        <nav class="primary">
            <ul>
                <li>
                    <a href="/ads/create">
                        <i class="material-icons">add</i>
                        Novo Anúncio
                    </a>
                </li>
                <li class='accounts'>
                    <a href="/accounts">
                        <i class="material-icons">account_circle</i>
                        Minha conta
                    </a>
                    
                    {% if user %}
                    <ul class="submenu">
                        <li>
                            <a href="/users">Configurações</a>
                        </li>
                        <li>
                            <a href="/buying">Minhas Compras</a>
                        </li>
                        <li>
                            <a href="/selling">Minhas Vendas</a>
                        </li>
                        <li>
                            <form action="/users/logout" method="POST">
                                <button>Sair</button>
                            </form>
                        </li>
                    </ul>
                    {% endif %}
                    
                </li>
            </ul>
        </nav>

    </div>
</header>