<div class="item">
    <div>Email</div>
    <div class="input">
        <input 
            type="email" 
            name="email" 
            placeholder='Digite seu e-mail'
            value='{{ user.email }}'
            onblur="Validate.apply(this, 'isEmail')"
            >
    </div>
</div>

<div class="item">
    <div>Crie Uma Nova Senha</div>
    <div class="input">
        <input 
            type="password" 
            name="password"
            placeholder='Digite uma nova senha'
        >
    </div>
</div>

<div class="item">
    <div>Repetir A Nova Senha</div>
    <div class="input">
        <input 
            type="password" 
            name="passwordRepeat"
            placeholder='Repita a nova senha'
        >
    </div>
</div>

<input type="hidden" name="token" value="{{ token }}">