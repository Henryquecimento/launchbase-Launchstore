{% extends "layout.njk" %}

{% block content %}

  <section class="search-products container">

      <aside>
        <div class="header">
          <h2>Computador</h2>
          <p>12 encontrados</p>
        </div>

        <div class="categories">
          <h4>Categorias</h4>
          <ul>
            <li><a href="#"></a>Informatica</li>
            <li><a href="#"></a>Console</li>
          </ul>
        </div>

      </aside>

    <section class="shop container">
       <div class="items">

         {% for product in products %}
            <div class="product">
              <div class="image"
                style="background-image: url('{{product.img if product.img else '//placehold.it/500x320'}}')"
              >
              </div>
              
              {% if product.oldPrice != product.price%}
                <div class='old-price'>{{product.oldPrice}}</div>
              {% endif %}

              <p>{{product.price}}</p>
              <h4>{{product.name}}</h4>

              <a href="/products/{{product.id}}" class='button'>Ver Produto</a>
            </div>


         {% endfor %}
       </div>
    </section>

  </section>
{% endblock content %}